# Challenge Author: {{author}}
name: {{ TEST_CASE_NAME }}

on:
  pull_request:
    branches: [ "master" ]

jobs:
  build_and_test:
    runs-on: {{ RUNS_ON }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

{% if DOCKER %}
      - name: Build and Run Docker Image
        run: |
            cd {{ TEST_CASE_NAME_PATH }}
            docker build -t {{TEST_CASE_NAME}} .
            cd -
            docker run --rm -d {{INLINE_PORTS}} --name {{TEST_CASE_NAME}} {{TEST_CASE_NAME}}:latest
{% endif %}
      - name: Run Python scripts
        uses: actions/setup-python@v4
        with:
            python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pytest
      - name: Test with pytest
        run: |
          pytest {{ CHALLENGE_PATH }}
        env:
          CONTAINER_HOST: localhost

{% if DOCKER %}
      - name: Clean up Docker container
        run: |
            docker stop {{TEST_CASE_NAME}}
{% endif %}

