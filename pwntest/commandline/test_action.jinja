name: {{ TEST_CASE_NAME }}

on:
  pull_request:
    branches: [ "master" ]
{%- if RUN_ON_CHANGE %}
    paths:
      - {{CHALLENGE_PATH}}**
{%- endif %}

jobs:
  build_and_test:
    runs-on: {{ RUNS_ON }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

{%- if DOCKER %}
      - name: Build and Run Docker Image
        run: | 
            cd {{ TEST_CASE_NAME_PATH }}
            docker build -t {{TEST_CASE_NAME}} .
            cd -
            docker run --rm -d {{INLINE_PORTS}} --name {{TEST_CASE_NAME}} -add-host host.docker.internal:host-gateway {{TEST_CASE_NAME}}:latest
{% endif %}
      - name: Set up Python 3.10
        uses: actions/setup-python@v3
        with:
          python-version: '3.10'
{%- if POETRY %}
      - name: Install Poetry and Dependencies
        run: |
          curl -sSL https://install.python-poetry.org | python3 -
          cd {{ REQUIREMENTS }}
          poetry install
{% endif %}
{%- if REQUIREMENTS and not POETRY %}
      - name: Install Dependencies
        run: |
          pip install {{ REQUIREMENTS }}
{% endif %}
      - name: Test with pytest
        run: |
          pip3 install pytest
          {% if POETRY %}
          poetry run pytest {{ CHALLENGE_PATH }}{% else %}pytest {{ CHALLENGE_PATH }}
          {% endif %}
        env:
          CONTAINER_HOST: localhost
{% if DOCKER %}
      - name: Clean up Docker container
        if: always() # need to run even if previous steps fail
        run: |
            docker stop {{TEST_CASE_NAME}}
{% endif %}

